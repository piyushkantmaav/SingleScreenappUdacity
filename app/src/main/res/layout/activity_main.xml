<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hppc.singlescreenappudacity.MainActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="250dp">


           <ImageView
               android:id="@+id/imageView2"
               android:layout_width="match_parent"
               android:layout_height="200dp"
               android:scaleType="fitXY"
               app:srcCompat="@drawable/dish_washing" />

           <ImageView
               android:layout_width="90dp"
               android:layout_height="90dp"
               android:layout_gravity="center"
               android:layout_marginTop="75dp"
               android:src="@drawable/dishwasher_liquid"
               
                 />

       </FrameLayout>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:text="Diamond DishWashing Liquid"
           android:textColor="@android:color/black"
           android:textSize="22dp" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:textColor="@android:color/black"
           android:text="Jabalpur(M.P)"/>


       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="24dp"
           android:layout_marginRight="24dp"
           android:layout_marginTop="30dp"
           >

           <TextView
               android:id="@+id/employer_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Diamond Dishwash"
               android:textStyle="bold" />

           <ImageView
               android:id="@+id/image_view_phone"
               android:layout_width="24dp"
               android:layout_height="24dp"
               android:layout_below="@+id/employer_name"
               android:layout_marginTop="8dp"
               android:scaleType="centerInside"
               android:src="@drawable/ic_call_black_24dp" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/employer_name"
               android:layout_marginLeft="16dp"
               android:layout_marginTop="8dp"
               android:layout_toRightOf="@+id/image_view_phone"
               android:autoLink="phone"
               android:text="Piyush Kant Maav"
               tools:ignore="RtlHardcoded" />

           <ImageView
               android:id="@+id/image_view_address"
               android:layout_width="24dp"
               android:layout_height="24dp"
               android:layout_below="@+id/image_view_phone"
               android:layout_marginTop="8dp"

               android:scaleType="centerInside"
               android:src="@drawable/ic_add_location_black_24dp" />

           <TextView
               android:id="@+id/textView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/image_view_phone"
               android:layout_marginLeft="8dp"
               android:layout_marginTop="8dp"
               android:layout_toRightOf="@+id/image_view_address"
               android:text="Trimurti Nagar, Jabalpur" />

       </RelativeLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="8dp"
           android:orientation="vertical">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="About Us"
               android:layout_margin="24dp"
               android:textColor="@android:color/black"
               android:textSize="22dp"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="@string/description"
               android:layout_margin="24dp"/>


       </LinearLayout>
   </LinearLayout>


</ScrollView>
